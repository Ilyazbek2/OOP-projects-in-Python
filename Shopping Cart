class Product:
    def __init__(self, name, price):
        self.name = name
        self.price = price

    def __str__(self):
        return f"{self.name} - ${self.price}"


class Cart:
    def __init__(self):
        self.items = []

    def add(self, product):
        self.items.append(product)

    def total(self):
        return sum(item.price for item in self.items)

    def show_cart(self):
        for item in self.items:
            print(item)
        print("Total:", self.total())


cart = Cart()
cart.add(Product("Laptop", 1000))
cart.add(Product("Headphones", 150))
cart.show_cart()
